TForm1 *Form1;

struct data
{
        AnsiString family;
        int age;
        bool army;

        data *next;
};

data *head,*p;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
data *add_collab = new data;
if(Edit1->Text!="")
        add_collab->family=Edit1->Text;
else
{
        ShowMessage("¬ведите фамилию.");
        return;
}

if(CSpinEdit1->Value)
        add_collab->age=CSpinEdit1->Value;
else
{
        ShowMessage("¬ведите возраст");
        return;
}
if(RadioGroup1->ItemIndex)
        add_collab->army=false;
else
        add_collab->army=true;
if(!head)
        p=head=add_collab;
else
{
        p->next=add_collab;
        p=add_collab;
}
}
//---------------------------------------------------------------------------
