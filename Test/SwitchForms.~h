#include "Unit1.h"
#include "Unit2.h"
#include "Unit3.h"
#include "Unit4.h"

//------------------------------------------------------------------------------

class SwitchForms
{
        private:
               TForm *arrayForms[];
        public:
                SwitchForms();
                void showForm(int);
};

//------------------------------------------------------------------------------

SwitchForms::SwitchForms()
{
        arrayForms[0] = Form1;
        arrayForms[1] = Form2;
        arrayForms[2] = Form3;
        arrayForms[3] = Form4;

}

//------------------------------------------------------------------------------

void SwitchForms::showForm(int n)
{
       //temp_form.Hide();
       arrayForms[n]->Show();
}

