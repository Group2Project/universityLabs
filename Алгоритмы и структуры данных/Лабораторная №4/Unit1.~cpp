//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
#include <iostream>
#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma link "CSPIN"
#pragma resource "*.dfm"
const int V = 5;
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------

void find(int GR[V][V],int st)
{
        int distance[V],index,i,j,u;
        bool visited[V];
        for(i=0;i<V;i++)
        {
                distance[i]=INT_MAX;
                visited[i]=false;
        }
        distance[st]=0;
        for(i=0;i<V-1;i++)
        {
                int min = INT_MAX;
                for(j=0;j<V;j++)
                        if(!visited[j] && distance[j]<=min)
                        {
                                min=distance[j];
                                index=j;
                        }
                visited[index]=true;
                for(j=0;j<V;j++)
                        if(!visited[j] && GR[index][j] && distance[index]!=INT_MAX && distance[index]+GR[index][j]<distance[j])
                                distance[j]=distance[index]+GR[index][j];
        }
        for(i=0;i<V;i++)
                Form1->StringGrid1->Cells[i][0] = IntToStr(distance[i]);
}

//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{

        int GR[V][V]={
        {0,5,6,7,0},
        {0,0,8,0,0},
        {0,0,0,9,0},
        {0,0,0,0,10},
        {11,0,0,0,1}};
        int start = CSpinEdit1->Value;
        find(GR,start);

}
//---------------------------------------------------------------------------


